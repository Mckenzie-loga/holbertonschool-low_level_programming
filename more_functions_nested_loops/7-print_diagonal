#include "main.h"

/**
 * print_diagonal - draws a diagonal line
 * @n: number of times to print '\'
 */
void print_diagonal(int n)
{
	int i, space;

	for (i = 0; i < n; i++)
	{
		for (space = 0; space < i; space++)
			_putchar(' ');
		_putchar('\\');
		_putchar('\n');
	}
	if (n <= 0)
		_putchar('\n');
}
